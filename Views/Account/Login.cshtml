@using Proiect.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-md-12">
        <div class="titie-section wow fadeInDown animated ">
            <h1>Conectare</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "my-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <div class="fieldset">
                @Html.LabelFor(m => m.UserName, new { @class = "fs-title" })

                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })


                @Html.LabelFor(m => m.Password, "Parola",new { @class = "fs-title" })

                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                @Html.LabelFor(m => m.RememberMe, "Ramai conectat" , new { @class = "fs-title", style = "display: inline" })
                @Html.CheckBoxFor(m => m.RememberMe)

                <input type="submit" value="Conecteaza-te" class="action-button" />
            </div>
            }
        </section>
    </div>
    <div class="col-md-6">
        <section id="socialLoginForm">
            <div class="my-form">
                <div class="fieldset">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}